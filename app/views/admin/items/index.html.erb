<% if params[:user_id].present? %>
  <% @page_title = @user.business_name + "から出品された商品" %>
<% else %>
<% @page_title = "出品商品管理" %>
<% end %>

<h1><%= @page_title %></h1>



<%= form_tag :search_items, method: :get, class: "search" do %>
  <%= text_field_tag "q", params[:q], placeholder: "商品検索..." %>
  <%= submit_tag "検索" %>
<% end %>

<div class="toolbar"><%#= link_to "出品商品情報の新規登録",:new_admin_item %></div>

<% if @items.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>ID</th>
        <th>出品者ID</th>
        <th>出品者名</th>
        <th>商品名</th>
        <th>コード</th>
        <th>カテゴリ</th>
        <th>在庫数</th>
        <th>価格（税込）</th>
        <th>コンディション</th>
        <th>出品状態</th>
        <th>操作</th>

      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
          <tr>
            <td style="text-align: right"><%= item.id %></td>
            <td><%= item.user_id %></td>
            <td><%= link_to item.user.business_name,admin_user_path(item.user) %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.code %></td>
            <td><%= link_to item.category.category_name, admin_category_path(item.category) %></td>
            <td><%= item.stock %></td>
            <td><%= number_to_currency(item.price, unit: "¥") %></td>
            <td><%= item.new? ? "新品" : "中古" %></td>
            <td><%= I18n.t("enums.item.status.#{item.status}") %></td>
            <td>
              <%= link_to "編集", edit_admin_item_path(item) %> |
              <%= link_to "削除", admin_item_path(item), method: :delete, data: { confirm: "削除しますか？" } %>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
  <%#= paginate @items %>
<% else %>
  <p>商品がありません。</p>
<% end %>