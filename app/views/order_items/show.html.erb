<% @page_title = "配送状況と注文情報の詳細" %>

<h1><%= @page_title %></h1>

<div class="toolbar">
 <% if @order_item.undelivered? || @order_item.shipped? %>
<td><%= link_to "キャンセル", cancel_order_item_path(@order_item),method: :patch,data: { confirm: "キャンセルしてもよろしいですか？" } %> </td>
<% elsif @order_item.returnable? %>
<td><%= link_to "返品", return_order_item_path(@order_item),method: :patch,data: { confirm: "受取しましたか？" } %></td>
<% end %>
<%= link_to "レビュー", new_item_review_path(item_id: @order_item.id) %>
<%= link_to "注文履歴の一覧に戻る", orders_path %>
</div>

<%= render "shared/order_item_form", order_item: @order_item %>