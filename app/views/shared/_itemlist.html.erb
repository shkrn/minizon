<% if @items.present? %>
  <div class="itemlist-grid">
      <% @items.each do |item| %>
        <div class="itemlist-card">
          <%= link_to item do %>
            <% if item.item_picture.attached? %>
              <%= image_tag item.item_picture.variant(resize: "300x300") %>
            <% end %>
            <div class="itemlist-info">
                <p class="itemlist-name"><%= link_to item.name, item %></p>
                <p class="itemlist-price"><%= number_to_currency(item.price, :format => "%u%n", unit: "¥") %></p>
                <%= render "shared/item_rating", item: item %>
                <!--<p class="itemlist-text" >在庫数：<%= item.stock %>点</p>-->
                <% if item.available? %>
                  <% if item.stock > 0 && item.stock < 10 %>
                    <span class="itemlist-status">残り<%= item.stock %>点 ご注文はお早めに</span>
                  <% end %>
                <% end %>
                <% if item.available? && item.stock >= 1%>
                  <%= form_with url: cart_items_path, local: true do |form| %>
                    <%= form.hidden_field :item_id, value: item.id %>
                    <%= form.hidden_field :quantity, value:1 %>
                    <%= form.submit "カートに入れる", class: "itemlist-buy-button" %>
                  <% end %>
                <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
  </div>
  <%= paginate @items %>
<% else %>
  <p>該当する商品がありません。</p>
<% end %>