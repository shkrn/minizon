<nav class="menubar">
    <ul class="menubar">

      <%= menu_link_to "TOP", :root %>

      <%= form_tag :search_items, method: :get, class: "search-container" do %>
        <%= text_field_tag "q", params[:q], placeholder: "検索...", class: "search-box" %>
        <%= submit_tag "検索",class: "search-button" %>
      <% end %>
      
      
      
      <% if current_user %>
          <%= menu_link_to current_user.full_name + "さん", :account %>
          <%= menu_link_to "ログアウト", :session,
              method: :delete, data: { confirm: "ログアウトしますか？" } %>
      <% else %>
        <%= menu_link_to "ログイン", :login %>
      <% end %>
      <% if !admin? %>
        <%= menu_link_to "お気に入り", favorites_users_path %>
        <%= menu_link_to "注文履歴", :orders %>     
        <% if current_user&.seller? %>
          <%= menu_link_to "出品者TOP", :seller_root %>
        <% elsif current_user&.buyer? || !login? %>
          <%= menu_link_to "カート(#{current_cart&.cart_items&.sum(:quantity) || 0})", :cart %>
        <% end %>
      <% else %>
          <%= menu_link_to "管理者TOP", :admin_root %>
      <% end %>
        
    </ul>
</nav>